<h1>Reporting Gift Cards</h1>

<table>
  <tr>
    <th>Sender</th>
    <th>Gifts given</th>
    <th>Spent</th>
  </tr>

<% @report.keys.each do |sender_name| %>
  <tr>
    <td><%= sender_name %></td>
    <td><%= @report[sender_name][:gifts_given] %></td>
    <td><%= @report[sender_name][:spent] %></td>
  </tr>
<% end %>
</table>

